<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:layout_width="@dimen/movie_poster_width"--><!--android:layout_height="@dimen/movie_poster_height"--><!--android:padding="2dp">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_movie_layout"
    android:layout_width="@dimen/movie_tile_width"
    android:layout_height="@dimen/movie_tile_height"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_poster_height"
        android:layout_gravity="top"
        android:contentDescription="@string/movie_grid_poster_desc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_movie_title"
        style="@style/TextAppearance.AppCompat.Title.Inverse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_title_height"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:textSize="14sp"
        tools:text="42" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?><!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:tools="http://schemas.android.com/tools"--><!--android:layout_width="@dimen/movie_poster_width"--><!--android:layout_height="@dimen/movie_poster_height"--><!--android:padding="2dp">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_video_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_video_type"
        style="@style/TextAppearance.AppCompat.Title.Inverse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:textSize="14sp"
        tools:text="Clip" />

    <ImageView
        android:id="@+id/iv_video_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_thumbnail_height"
        android:layout_gravity="top"
        android:padding="4dp"
        android:contentDescription="@string/video_thumb_desc"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_video_title"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:padding="4dp"
        android:textSize="14sp"
        tools:text="Featurette" />

</LinearLayout>
